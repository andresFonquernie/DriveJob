<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    tools:context=".MyRidesActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/myRidesCreated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/textTitle"
        android:textStyle="bold"
        android:text="@string/ride_created"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myridescreated_list"
        tools:listitem="@layout/holder_listride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/myRidesRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/textTitle"
        android:textStyle="bold"
        android:text="@string/ride_request"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myridesrequest_list"
        tools:listitem="@layout/holder_listride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/myRidesJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/textTitle"
        android:textStyle="bold"
        android:text="@string/ride_join"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/myridesjoin_list"
        tools:listitem="@layout/holder_listride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>
